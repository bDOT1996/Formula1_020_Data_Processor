{
  "name": "openf1-dbt",
  "build": { "dockerfile": "Dockerfile", "context": ".." },
  "workspaceFolder": "/workspace",
  "extensions": [
    "dbtLabsInc.dbt",
    "innoverio.vscode-dbt-power-user",
    "eamodio.gitlens",
    "dorzey.vscode-sqlfluff",
    "mechatroner.rainbow-csv",
    "redhat.vscode-yaml"
  ],
  "settings": {
    "files.autoSave": "afterDelay",
    "dbt.profilesDir": "/workspace",
    "dbt.projectDir": "/workspace"
  },
  "postCreateCommand": "pip install --no-cache-dir duckdb dbt-core dbt-duckdb",
  "remoteUser": "root",
  // poniżej: jeśli będziesz wystawiać np. DuckDb HTTP UI lub Jupyter, odkryj porty
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "DuckDB HTTP UI (opcjonalnie)"
    }
  }
}
