{
  "name": "openf1-dbt-dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "extensions": [
    "dbtLabsInc.dbt",
    "innoverio.vscode-dbt-power-user",
    "eamodio.gitlens",
    "dorzey.vscode-sqlfluff",
    "mechatroner.rainbow-csv",
    "redhat.vscode-yaml"
  ],
  "settings": {
    "files.autoSave": "afterDelay",
    "dbt.profilesDir": "/workspace",
    "dbt.projectDir": "/workspace"
  },
  "postCreateCommand": "pip install --no-cache-dir duckdb dbt-core dbt-duckdb",
  "remoteUser": "root",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "dbt docs / Jupyter" }
  }
}
